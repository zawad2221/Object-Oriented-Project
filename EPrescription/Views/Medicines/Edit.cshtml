@model EPrescription.Models.Medicine

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="medicineId" />
            <div class="form-group">
                <label asp-for="medicineName" class="control-label"></label>
                <input asp-for="medicineName" class="form-control" />
                <span asp-validation-for="medicineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="medicineSingleUniteQuantity" class="control-label"></label>
                <input asp-for="medicineSingleUniteQuantity" class="form-control" />
                <span asp-validation-for="medicineSingleUniteQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="medicineFormId" class="control-label"></label>
                <select asp-for="medicineFormId" class="form-control" asp-items="ViewBag.medicineFormId"></select>
                <span asp-validation-for="medicineFormId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="medicineTypeId" class="control-label"></label>
                <select asp-for="medicineTypeId" class="form-control" asp-items="ViewBag.medicineTypeId"></select>
                <span asp-validation-for="medicineTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="companyId" class="control-label"></label>
                <select asp-for="companyId" class="form-control" asp-items="ViewBag.companyId"></select>
                <span asp-validation-for="companyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
